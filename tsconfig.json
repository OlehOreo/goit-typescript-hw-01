{
	"compilerOptions": {
		"rootDir": "./src", //звідси ts бере файли для перетворення в js
		"outDir": "./dist", //сюди зберігаються перетворені в js файли
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": ["ES2021", "dom"],
		"module": "es2020",
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"target": "es2019",
		"sourceMap": true
	},
	"include": ["**/*.ts"]
}
